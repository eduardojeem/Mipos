# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
# SERVICE_ROLE_KEY should only be used in server-side contexts (API routes, scripts)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# API Configuration  
NEXT_PUBLIC_API_URL=http://localhost:3000/api
BACKEND_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-jwt-secret-at-least-32-chars
JWT_ISSUER=beautypos-auth
JWT_AUDIENCE=beautypos-api
JWT_PUBLIC_KEY=your-public-key
# Optional: URL to fetch public key (e.g. from Supabase)
JWT_PUBLIC_KEY_URL=

# Redis (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
NEXT_PUBLIC_SENTRY_DSN=

# Sync API (for offline synchronization)
SYNC_API_KEY=your-sync-api-key

# Feature Flags
MOCK_AUTH=false
NEXT_PUBLIC_ENABLE_SYNC_LOG_PERSISTENCE=false

# Stock Thresholds
NEXT_PUBLIC_LOW_STOCK_THRESHOLD=10
NEXT_PUBLIC_CRITICAL_STOCK_THRESHOLD=5
